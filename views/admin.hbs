<div class="adminContainer">
	<div class="adminLeft">
		<form
			action="/add"
			method="POST"
			class="adminForm"
			enctype="multipart/form-data"
		>
			<h4 class="admin-title">Add new Post</h4>
			<div class="admin-input-group">
				<input
					placeholder="Title"
					class="adminInput"
					type="text"
					required
					name="title"
				/>
			</div>
			<label for="images" class="drop-container">
				<span class="drop-title">Drop files here</span>
				or
				<input type="file" id="images" accept="video/*" name="file" required />
			</label>
			<button type="submit" class="admin-button">ADD</button>
		</form>
	</div>
	<div class="adminRight">
		{{#each userPosts}}
			<div class="adminCard">
				<video width="320" height="240" controls>
					<source src="/videos/{{video}}" />
				</video>
				<form action="/delete/{{watchVideoURL id}}" method="POST">
					<button class="adminDeleteBtn">❌</button>
				</form>
				<div class="bottomCard">
					<div class="bottomCardLeft">
						<img
							src="/avatars/{{this.user.avatar}}"
							alt="cardAvatar"
							class="cardAvatar"
						/>
					</div>
					<div class="bottomCardRight">
						<input
							type="read"
							class="bottomCardTitle"
							id="{{id}}"
							ondblclick="doubleClick(this)"
							onblur="sendData(this)"
							value="{{title}}"
							readonly
						/>
						<div class="cardDescription">
							{{this.user.username}}
						</div>
						<div class="cardBottomDown">
							<span class="cardViews">{{getLength views}} views</span>
							<span class="cardDate">💿 {{agoDate createdAt}}</span>
						</div>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>